{% extends "pragmatic-translations/_layout" %}

{% set title = "Entradas" %}
{% set activeSection = "entries" %}

{% block main %}
  <div class="flex justify-between align-center">
    <h1>Entradas</h1>
  </div>

  <div class="flex" style="gap: 12px; margin-top: 8px; flex-wrap: wrap;">
    <div class="hud-stat">
      <div class="label">Total keys</div>
      <div class="value">{{ total }}</div>
    </div>
    <div class="hud-stat">
      <div class="label">Groups</div>
      <div class="value">{{ groups|length }}</div>
    </div>
    <div class="hud-stat">
      <div class="label">Languages</div>
      <div class="value">{{ languages|length }}</div>
    </div>
  </div>

  <div class="flex" style="margin-top: 12px; gap: 16px; align-items: flex-end;">
    <form method="get" class="flex" style="gap: 12px; align-items: flex-end;">
      <input type="hidden" name="group" value="{{ group }}">
      <input type="hidden" name="page" value="1">
      <div>
        <label for="q">Search</label>
        <input class="text" type="text" id="q" name="q" value="{{ search }}" placeholder="Key">
      </div>
      <div>
        <label for="perPage">Per page</label>
        <div class="select">
          <select id="perPage" name="perPage">
            {% for option in [50, 100, 250] %}
              <option value="{{ option }}" {{ option == perPage ? 'selected' : '' }}>{{ option }}</option>
            {% endfor %}
          </select>
        </div>
      </div>
      <button class="btn" type="submit">Filter</button>
      <a class="btn" href="{{ url('pragmatic-translations/entries', { group: group, perPage: perPage }) }}">Reset</a>
    </form>
  </div>

  <div class="tabs" style="margin-top: 16px;">
    <ul>
      {% for groupName in groups %}
        <li>
          <a class="{{ groupName == group ? 'sel' : '' }}" href="{{ url('pragmatic-translations/entries', { group: groupName, q: search, perPage: perPage }) }}">{{ groupName }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>

  <form method="post" accept-charset="UTF-8">
    {{ csrfInput() }}
    {{ actionInput('pragmatic-translations/translations/save') }}
    {{ redirectInput('pragmatic-translations/entries', { group: group, q: search, perPage: perPage, page: page }) }}

    <table class="data fullwidth" id="translations-table" style="margin-top: 16px;">
      <thead>
        <tr>
          <th>Key</th>
          {% for language in languages %}
            <th>{{ language }}</th>
          {% endfor %}
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        {% for translation in translations %}
          <tr>
            <td>
              <input type="hidden" name="translations[{{ loop.index0 }}][id]" value="{{ translation.id }}">
              <input class="text fullwidth" name="translations[{{ loop.index0 }}][key]" value="{{ translation.key }}" required>
              <input type="hidden" name="translations[{{ loop.index0 }}][group]" value="{{ group }}">
            </td>
            {% for language in languages %}
              <td>
                {% set value = '' %}
                {% for site in sites %}
                  {% if site.language == language and translation.values[site.id] is defined %}
                    {% set value = translation.values[site.id] %}
                  {% endif %}
                {% endfor %}
                <input class="text fullwidth" name="translations[{{ loop.parent.loop.index0 }}][values][{{ language }}]" value="{{ value }}">
              </td>
            {% endfor %}
            <td>
              <label class="checkbox">
                <input type="checkbox" name="translations[{{ loop.index0 }}][delete]" value="1">
                <span></span>
              </label>
            </td>
          </tr>
        {% endfor %}

        {% set newIndex = translations|length %}
        <tr data-new-row="1">
          <td>
            <input class="text fullwidth" name="translations[{{ newIndex }}][key]" placeholder="New key">
            <input type="hidden" name="translations[{{ newIndex }}][group]" value="{{ group }}">
          </td>
          {% for language in languages %}
            <td>
              <input class="text fullwidth" name="translations[{{ newIndex }}][values][{{ language }}]" placeholder="">
            </td>
          {% endfor %}
          <td></td>
        </tr>
      </tbody>
    </table>

    <div class="buttons" style="margin-top: 12px;">
      <button class="btn" id="add-row" type="button">Add Row</button>
      <button class="btn submit" type="submit">Save</button>
    </div>
  </form>

  <div class="flex justify-between align-center" style="margin-top: 16px;">
    <div>{{ total }} total</div>
    <div class="flex" style="gap: 8px; align-items: center;">
      {% set prevPage = page > 1 ? page - 1 : 1 %}
      {% set nextPage = page < totalPages ? page + 1 : totalPages %}
      <a class="btn {{ page == 1 ? 'disabled' : '' }}" href="{{ url('pragmatic-translations/entries', { group: group, q: search, perPage: perPage, page: prevPage }) }}">Prev</a>
      <div>Page {{ page }} / {{ totalPages }}</div>
      <a class="btn {{ page == totalPages ? 'disabled' : '' }}" href="{{ url('pragmatic-translations/entries', { group: group, q: search, perPage: perPage, page: nextPage }) }}">Next</a>
    </div>
  </div>

  {% js %}
    (function() {
      const translationsTable = document.getElementById('translations-table');
      const addTranslationButton = document.getElementById('add-row');
      if (translationsTable && addTranslationButton) {
        addTranslationButton.addEventListener('click', function() {
          const body = translationsTable.querySelector('tbody');
          const template = body.querySelector('tr[data-new-row="1"]');
          if (!template) return;

          const newIndex = body.querySelectorAll('tr').length;
          const clone = template.cloneNode(true);
          clone.removeAttribute('data-new-row');

          clone.querySelectorAll('input').forEach(function(input) {
            const name = input.getAttribute('name');
            if (name) {
              input.setAttribute('name', name.replace(/translations\[\d+\]/, 'translations[' + newIndex + ']'));
            }
            input.value = '';
          });

          body.appendChild(clone);
        });
      }
    })();
  {% endjs %}
{% endblock %}
